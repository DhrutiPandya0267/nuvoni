{
  "expo": {
    "name": "Nuvoni",
    "slug": "nuvoni",
    "scheme": "nuvoni",
    "description": "Nuvoni, powered by Draftbit",
    "privacy": "unlisted",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/app/icon.png",
    "splash": {
      "image": "./assets/app/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#5A45FF"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier": "eu.nuvoni.wrapper.a",
      "supportsTablet": false,
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan barcodes on event tickets.",
        "NSRemindersUsageDescription": "This app uses the reminders to create a list of local services",
        "NSPhotoLibraryUsageDescription": "This app uses the photo library to review rich media previously added.",
        "NSPhotoLibraryAddUsageDescription": "This app uses the photo library to add rich media shared from others.",
        "NSLocationWhenInUseUsageDescription": "This app uses the location to create a list of local services."
      },
      "usesIcloudStorage": false
    },
    "android": {
      "versionCode": 1,
      "package": "eu.nuvoni.wrapper.a",
      "permissions": [
        "VIBRATE",
        "USE_FINGERPRINT",
        "READ_PHONE_STATE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE",
        "MANAGE_DOCUMENTS",
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "themeColor": "#000000"
    },
    "notification": {
      "androidMode": "collapse"
    },
    "extra": {
      "eas": {
        "projectId": "803f8c6d-c988-4f9e-9b75-8ca798c8d32e"
      }
    }
  }
}
